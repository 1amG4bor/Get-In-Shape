<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    android:padding="4dp"
    android:weightSum="12"
    >

    <TextView
        android:id="@+id/el_exercise"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Jumping jacks"
        android:textSize="18sp"
        android:textColor="@color/textColor_light"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/el_separator"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:background="@drawable/black_panel"
        />

    <TextView
        android:id="@+id/el_data"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="0:45"
        android:textColor="@color/textColor_light"
        android:textSize="21sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/el_dataType"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#2FFF"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/dataTypeSecond"
        android:textColor="@color/textColor_light"
        android:textSize="16sp"
        android:textAlignment="center" />
</LinearLayout>